<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowBackground">@drawable/shape_gradient</item>-->
    </style>

    <style name="mytitlestyle" parent="android:Theme">
        <!-- 设置高度，和 mytitlebar.xml中保持一致 -->
        <item name="colorPrimary">@color/wite</item>
        <item name="colorPrimaryDark">@color/wite</item>
        <item name="android:windowTitleSize">50dp</item>
        <!-- 设置内填充为0 使自定义标题填充整个标题栏，否则左右两边有空隙 -->
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@color/wite</item>
        <item name="android:windowActionBar">false</item>
        <!--        <item name="android:windowNoTitle">true</item>-->
        <!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

</resources>
